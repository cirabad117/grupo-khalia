{
  "entrypoint": "index.html",
  "shell": "src/my-app.js",
  "sources": [
    "images/**/*"
  ],
  "extraDependencies": [
    "manifest.json",
    "node_modules/@webcomponents/webcomponentsjs/*.js",
    "!node_modules/@webcomponents/webcomponentsjs/gulpfile.js",
    "node_modules/@webcomponents/webcomponentsjs/bundles/*.js",
    "node_modules/kothing-editor/dist/kothing-editor.min.js",
    "node_modules/kothing-editor/dist/css/kothing-editor.min.css",
    "node_modules/web-animations-js/*.js",
    "node_modules/web-animations-js/*.min.js",
    "node_modules/html2canvas/dist/html2canvas.min.js",
    "node_modules/html2pdf.js/dist/html2pdf.min.js",
    "scripts/*.js",
    "scripts/*.css"
  ],
  "builds": [
    
    {
      "name": "es6-bundled",
      "browserCapabilities": [
        "es2015"
      ],
      "js": {
        "minify": true,
        "transformModulesToAmd": true
      },
      "css": {
        "minify": true
      },
      "html": {
        "minify": true
      },
      "bundle": true,
      "addServiceWorker": true
    }
    
  ],
  "moduleResolution": "node",
  "npm": true,
  "lint": {
    "rules": [
      "polymer-3"
    ]
  }
}
